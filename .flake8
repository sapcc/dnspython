[flake8]
ignore =
       # Prefer emacs indentation of continued lines
       E126,
       E129,
       # Whitespace round parameter '=' can be excessive
       E252,
       # Not excited by the "two blank lines" rule
       E302,
       E305,
       # Ambigious variables are ok.
       E741,
       # Lines ending with binary operators are OK
       W504,

max-line-length = 80
